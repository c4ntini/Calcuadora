#include <stdio.h>
#include <math.h>


int main()
{
    printf("Felipe Vieira Cantini \nAnalise e desenvolvimento de sistemas \nUniversidade LaSalle \n20221410 \n");


    int  opcao, num1, num2, resul;
    float n1, n2, div;
    printf("Escolha a sua opção:\n");
    printf("1 - Raiz quadrada\n");
    printf("2 - Soma\n");
    printf("3 - Multiplicacao\n");
    printf("4 - Divisao\n");
    printf("5 - Potencia\n");
    scanf("%d",&opcao);

      switch (opcao)
    {
        case 1:

            printf("Digite um numero: \n");
            scanf("%d",&num1);
            resul = sqrt(num1);
            printf("Raiz = %d",resul);
            break;

        case 2:

            printf("Digite um numero: \n");
            scanf("%d",&num1);
            printf("Digite um numero: \n");
            scanf("%d",&num2);
            resul = num1 + num2;

            printf("Resultado e %d\n", resul);
            break;

        case 3:

            printf("Digite um numero: \n");
            scanf("%d",&num1);
            printf("Digite um numero: \n");
            scanf("%d",&num2);
            resul = num1 * num2;

            printf("Resultado e %d\n", resul);
            break;

        case 4:

            printf("Digite um numero: \n");
            scanf("%f",&n1);
            printf("Digite um numero: \n");
            scanf("%f",&n2);

            div = n1 / n2;
            printf("O resultado e %.2f", div);


            break;

        case 5:

            printf("Digite um numero: \n");
            scanf("%d",&num1);
            printf("Digite um numero: \n");
            scanf("%d",&num2);
            resul = pow (num1,num2);

            printf("Resultado e %d\n", resul);
            break;

    }


}
